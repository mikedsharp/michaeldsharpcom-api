{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Michael D Sharp.com API",
    "license": {
      "name": ""
    }
  },
  "host": "http://api.michaeldsharp.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json", 
    "x-www-form-urlencoded"
  ],
  "produces": [
    "application/json", 
    "text/html"
  ],
  "paths": {
      "/feedback": {
          "post" : {
              "summary": "is that a like or a dislike?",
              "operationId": "sendFeedback", 
              "tags": ["feedback"], 
              "parameters": [{
                "in": "formData", 
                "name": "like", 
                "required": true,
                "type": "boolean"
              }]
          }
      },
      "/projects": {
          "get" : {
              "summary": "list all projects",
              "operationId": "listProjects", 
              "tags": ["projects"]
          }
      },
      "/projects/{projectId}": {
         "get" : {
              "summary": "retrieve a single project by id",
              "operationId": "getProjectById", 
              "tags": ["projects"], 
              "parameters": [{
                "name": "projectId", 
                "in": "path", 
                "required": true, 
                "description": "the identifier for the project to retrieve", 
                "type": "string"
              }]
          }
      }, 
      "/contact" : {
        "post": {
          "summary": "send mike an email from michaeldsharp.com", 
          "operationId": "sendUserMessage", 
          "tags": ["contact"], 
          "parameters": [{
            "in": "formData", 
            "name": "name", 
            "required": true,
            "type": "string"
          }, 
          {
            "in": "formData", 
            "name": "body", 
            "required": true,
            "type": "string"
          }, 
          {
            "in": "formData", 
            "name": "from", 
            "required": true,
            "type": "string", 
            "pattern": "\\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}\\b."
          }]
        }
      }
  },
  "definitions": {

  }
}